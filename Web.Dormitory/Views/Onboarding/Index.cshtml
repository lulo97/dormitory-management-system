@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<script src="~/AngularJS_Code/Onboarding/Utils.js"></script>
<script src="~/AngularJS_Code/Onboarding/Service.js"></script>
<script src="~/AngularJS_Code/Onboarding/Controller.js"></script>

<main ng-app="myApp" ng-controller="OnboardingController">
    <div class="p-5 bg-light">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Onboarding</h3>
            </div>
            <form ng-submit="submitForm()">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <!-- Assuming you are passing the username from the server-side -->
                        @using Microsoft.AspNet.Identity
                        <input id="username" class="form-control" readonly value=@User.Identity.GetUserName()>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">StudentID</label>
                        <input class="form-control" ng-model="studentID" placeholder="20201234">
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</main>