<div class="col-lg-3 col-6" ng-repeat="total in totals">
    <div class="small-box" ng-class="{'bg-info': $index === 0, 'bg-success': $index === 1, 'bg-warning': $index === 2, 'bg-danger': $index === 3}">
        <div class="inner">
            <h3>{{ total.value }}</h3>
            <p>{{ total.label }}</p>
        </div>
        <div class="icon">
            <i class="ion" ng-class="total.iconClass"></i>
        </div>
        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
</div>