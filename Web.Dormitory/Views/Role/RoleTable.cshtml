<div class="">
    <div class="card">
        <div class="card-header">
            <div class="d-flex flex-row align-items-center justify-content-between">
                <h3 class="card-title">Role Management</h3>

                <!-- Add Role Button -->
                <button class="btn btn-success" ng-click="setShowAddRoleModal('show')">Add Role</button>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Role Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Use ng-repeat or other Angular directives here to populate roles -->
                    <tr ng-repeat="role in roles">
                        <td>{{ role.Id }}</td>
                        <td>{{ role.Name }}</td>
                        <td>
                            <!-- Add button for deleting a role -->
                            <button class="btn btn-info btn-sm" ng-click="setShowEditRoleModal('show', role.Name)">Edit</button>
                            <button class="btn btn-danger btn-sm" ng-click="handleDeleteRoleClick(role.Name)">Delete</button>
                        </td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <!--Pagination-->
            Pagination
        </div>
    </div>
</div>