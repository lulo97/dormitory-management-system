<div class="">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">User Role Management</h3>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User Email</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in users">
                        <td>{{ user.Id }}</td>
                        <td>{{ user.Email }}</td>
                        <td>
                            <div ng-repeat="role in user.AspNetRoles">{{ role }}</div>
                        </td>
                        <td>
                            <button class="btn btn-info btn-sm" ng-click="openUserRoleManagementModal('show', user)">Edit Role</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <!--Pagination-->
            Pagination
        </div>
    </div>
</div>