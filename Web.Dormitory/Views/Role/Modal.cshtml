<div class="modal fade" id="AddRoleModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Role</h4>
            </div>
            <div class="modal-body">
                <label for="newRole1">New Role Name:</label> 
                <input type="text" id="newRole1" ng-model="newRoleName">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="handleCreateRoleClick()">Confirm</button>
                <button type="button" class="btn btn-default" ng-click="setShowAddRoleModal('hide')">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="EditRoleModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Role</h4>
            </div>
            <div class="modal-body">
                <label for="newRole">Current Role Name: <strong>{{oldRoleName}}</strong></label>
                <input type="text" id="newRole" ng-model="editRoleName">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="handleEditRoleClick()">Confirm</button>
                <button type="button" class="btn btn-default" ng-click="setShowEditRoleModal('hide', null)">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="UserRoleManagementModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">User Role Management</h4>
            </div>
            <div class="modal-body">
                <p>Current User: <strong>{{current_user.Email}}</strong></p>

                <!-- Add User Role Button -->
                <div class="d-flex flex-row justify-content-between align-items-center my-3 gap-3">
                    <div>
                        <label for="newRole2">Role Name:</label>
                        <select ng-model="newUserRoleName" ng-options="role.Name as role.Name for role in roles">
                        </select>
                    </div>
                    <button class="btn btn-success text-nowrap" ng-click="handleAddUserRoleClick()">Add Role</button>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Use ng-repeat or other Angular directives here to populate roles -->
                        <tr ng-repeat="roleName in current_user.AspNetRoles">
                            <td>{{ roleName }}</td>
                            <td>
                                <!-- Add button for deleting a role -->
                                <button class="btn btn-danger btn-sm" ng-click="handleRemoveRoleFromUserClick(roleName)">Remove</button>
                            </td>
                        </tr>
                        <tr ng-if="!current_user.AspNetRoles || current_user.AspNetRoles.length === 0">
                            <td colspan="2">This user has no role.</td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <!-- Close Button -->
                <button type="button" class="btn btn-default" ng-click="openUserRoleManagementModal('hide', null)">Close</button>
            </div>
        </div>

    </div>
</div>